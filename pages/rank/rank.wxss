page{
    background: #eee;
}
.official{
    background: #fff;
    padding: 30rpx;
    padding-bottom: 50rpx;
    border-radius: 20rpx;
    padding-top: 120rpx;
}

.title image{
    width: 40rpx;
}
.title text{
    height: 45rpx;
    line-height: 45rpx;
    font-size: 45rpx;
    font-weight: 700;
    padding-left: 20rpx;
}
.official_item{
    display: flex;
    text-align: center;
    padding-top: 30rpx;
    padding-bottom: 30rpx;
    /* filter: blur(200rpx); */
    margin-top: 20rpx;
    border-radius: 20rpx;
}
.official_item_left{
    flex: 3;
}
.official_item_left_name{
    font-size: 34rpx;
}
.official_item_left_image image{
    position: relative;
    top: 30rpx;
}
.official_item_right{
    flex: 7;
}
.music{
    padding-top: 20rpx;
}
.rankitem{
    padding: 20rpx;
    position: relative;
    top: 40rpx;
    background: #fff;
    border-radius: 20rpx;
    margin-bottom: 40rpx;
    padding-left: 40rpx;
}
.allitem{
    display: inline;
    position: relative;
    top: 40rpx;
}
.item{
    display: inline-block;
    width: 33%;
    
}
.icon image{
    position: relative;
    left: 140rpx;
    top: -100rpx;
    
}
.cover{
    border-radius: 25rpx;
}
.name{
    font-size: 24rpx;
    text-align: center;
    position: absolute;
    top: -60rpx;

}
.updateFrequency text{
    position: relative;
    left: 60rpx;
    top: -200rpx;
    color: #fff;
    padding-right: 0;
    background: rgba(236, 233, 233, 0.2);
    border-radius: 16rpx;
    font-size: 24rpx;
}

.tab{
   position: fixed;
   z-index: 9;
   top: 0;
   background: #fff;
   width: 100%;
}